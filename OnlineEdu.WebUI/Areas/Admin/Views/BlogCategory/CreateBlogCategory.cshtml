@model CreateBlogCategoryDto

@{
    ViewData["Title"] = "Blog Kategorisi Oluşturma Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form method="post">
    <label>Blog Kategorisi Adı</label>
    <input type="text" asp-for="CategoryName" class="form-control" />
    <span asp-validation-for="CategoryName" class="text-danger"></span>
    <br />
 
    <button class="btn btn-outline-success">Kaydet</button>
</form>

