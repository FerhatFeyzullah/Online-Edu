@model UpdateBlogCategoryDto

@{
    ViewData["Title"] = "BLog Kategori Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form method="post">
    <input type="hidden" asp-for="BlogCategoryId"/>
    <label>Blog Kategorisi Adı</label>
    <input type="text" asp-for="CategoryName" class="form-control" />
    <span asp-validation-for="CategoryName" class="text-danger"></span>
    <br />

    <button class="btn btn-outline-success">Güncelle</button>
</form>
