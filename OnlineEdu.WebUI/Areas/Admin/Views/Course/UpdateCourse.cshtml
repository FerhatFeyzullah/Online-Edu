@model UpdateCourseDto

@{
    ViewData["Title"] = "Kurs Güncelleme Sayfası";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="CourseId" />
    <label>Kurs Adı</label>
    <input type="text" asp-for="CourseName" class="form-control" />
    <br />
    <label>Resim Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <label>Kurs Kategorisi</label>
    <select asp-items="@ViewBag.courseCategories" asp-for="CourseCategoryId" class="form-control">
        <option>Kategori Seçin</option>
    </select>
    <br />
    <label>Ücret</label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />
    <label>Ana Sayfada Gösterilsin</label> <input type="checkbox" asp-for="IsShown" class="form-check" />
    <br />

    <button class="btn btn-outline-primary">Güncelle</button>
</form>
