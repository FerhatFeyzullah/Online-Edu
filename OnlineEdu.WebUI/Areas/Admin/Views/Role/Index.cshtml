@model List<ResultRoleDto>

@{
    ViewData["Title"] = "Rol Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
	int count = 0;
}

<table class="table table-hover">
	<thead>
		<tr>
			<th>#</th>
			<th>Rol Adı</th>			
			<th></th>

		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			count++;
				<tr>
					<td>@count</td>
					<td>@item.Name</td>

					<td>						
						<button onclick="deleteRoleFunc(@item.Id)" class="btn btn-outline-danger">Sil</button>
					</td>

				</tr>
		}
	</tbody>
</table>

<a asp-area="Admin" asp-controller="Role" asp-action="CreateRole" class="btn btn-outline-primary">Yeni Rol Ekle</a>

<script>
	function deleteRoleFunc(id)
	{
		Swal.fire({
	  title: "Silmek istediğine emin misin?",
	  text: "Bu işlemi geri alamazsın!",
	  icon: "warning",
	  showCancelButton: true,
	  confirmButtonColor: "#3085d6",
	  cancelButtonColor: "#d33",
	  confirmButtonText: "Evet, Sil!",
	  cancelButtonText: "Iptal"
	}).then((result) => {
	  if (result.isConfirmed) {
		window.location.href = "/Admin/Role/DeleteRole/"+id;
	  }
	});
	}


</script>

