@model List<UserViewModel>

@{
	ViewData["Title"] = "Kullanıcı Listesi";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@{
	int count = 0;
}

<table class="table table-hover">
	<thead>
		<tr>
			<th>#</th>
			<th>Ad Soyad</th>
			<th>Kullanıcı Adı </th>
			<th>Rolleri</th>
			<th></th>

		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			count++;
			<tr>
				<td>@count</td>
				<td>@item.NameSurname</td>
				<td>@item.UserName</td>
				<td>
					@foreach (var role in item.Roles)
					{
						<span class="badge bg-secondary text-white">@role</span>
					}
				</td>

				<td>
					<a asp-area="Admin" asp-controller="RoleAssign" asp-action="AssignRole" asp-route-id="@item.Id" class="btn btn-outline-success">Rol Ata</a>
				</td>

			</tr>
		}
	</tbody>
</table>


