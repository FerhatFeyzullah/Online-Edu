@using OnlineEdu.Entity.Entities
@model List<AppUser>

@{
	ViewData["Title"] = "Kullanıcı Listesi";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@{
	int count = 0;
}

<table class="table table-hover">
	<thead>
		<tr>
			<th>#</th>
			<th>Ad Soyad</th>
			<th>Kullanıcı Adı </th>
			<th></th>

		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			count++;
			<tr>
				<td>@count</td>
				<td>@item.FirstName @item.LastName</td>
				<td>@item.UserName</td>


				<td>
					<a asp-area="Admin" asp-controller="RoleAssign" asp-action="AssignRole" asp-route-id="@item.Id" class="btn btn-outline-success">Rol Ata</a>
				</td>

			</tr>
		}
	</tbody>
</table>


