@model List<ResultTeacherSocialDto>

@{
    ViewData["Title"] = "Sosyal Medya Hesaplarım";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

@{int count = 0;}

<table class="table table-hover">
	<thead>
		<tr>
			<th>#</th>
			<th>Sosyal Medya</th>

			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			count++;
			<tr>
				<td>@count</td>
				<td><a href="@item.Url" target="_blank" > <i class="@item.Icon fa-2x"></i>  </a>@item.Name</td>
				
				<td>
					<a asp-area="Teacher" asp-controller="MySocialMedia" asp-action="UpdateTeacherSocial" asp-route-id="@item.TeacherSocialId"
					   class="btn btn-outline-info">Düzenle</a>

					<button onclick="deleteTeacherSocialFunc(@item.TeacherSocialId)" class="btn btn-outline-danger">Sil</button>
				</td>

			</tr>
		}
	</tbody>
</table>

<a asp-area="Teacher" asp-controller="MySocialMedia" asp-action="CreateTeacherSocial" class="btn btn-outline-primary">Yeni Sosyal Medya Hesabı Ekle</a>

<script>
	function deleteTeacherSocialFunc(id)
	{
		Swal.fire({
	  title: "Silmek istediğine emin misin?",
	  text: "Bu işlemi geri alamazsın!",
	  icon: "warning",
	  showCancelButton: true,
	  confirmButtonColor: "#3085d6",
	  cancelButtonColor: "#d33",
	  confirmButtonText: "Evet, Sil!",
	  cancelButtonText: "Iptal"
	}).then((result) => {
	  if (result.isConfirmed) {
		window.location.href = "/Teacher/MySocialMedia/DeleteTeacherSocial/"+id;
	  }
	});
	}


</script>


