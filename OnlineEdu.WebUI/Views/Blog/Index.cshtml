@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_UILayout.cshtml";
}


<div class="slider-area ">
	<div class="slider-height2 d-flex align-items-center">
		<div class="container">
			<div class="row">
				<div class="col-xl-12">
					<div class="hero-cap hero-cap2 text-center">
						<h2>Bloglar</h2>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<section class="blog_area section-padding">
	<div class="container">
		<div class="row">
			@await Component.InvokeAsync("_BlogAllBlogs")
			<div class="col-lg-4">
				<div class="blog_right_sidebar">
					<aside class="single_sidebar_widget search_widget">
						<form action="#">
							<div class="form-group">
								<div class="input-group mb-3">
									<input type="text" class="form-control" placeholder='Arayın'
										   onfocus="this.placeholder = ''"
										   onblur="this.placeholder = 'Arayın'">
									<div class="input-group-append">
										<button class="btns" type="button"><i class="ti-search"></i></button>
									</div>
								</div>
							</div>
							<button class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn"
									type="submit">
								Ara
							</button>
						</form>
					</aside>

					@await Component.InvokeAsync("_BlogCategoryWithBlogs")

					@await Component.InvokeAsync("_BlogRecentBlogs")

					@await Component.InvokeAsync("_BlogSubscribe")

				</div>
			</div>
		</div>
	</div>
</section>


